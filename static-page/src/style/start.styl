@import 'nib'
@import 'colors.styl'

loginFormHeight = 64px
loginButtonHeight = 40px
loginInputHeight = 40px
sectionWidth = 960px
headerLoginHeight = 64px

#firstPage
  top 0
  left 0
  right 0
  bottom 0
  margin auto
  position absolute
  overflow-y scroll
  min-width sectionWidth + 20px
  display: flex;
  align-items: center;
  justify-content: center;
  padding 0 10%
  .btn
    color greenColor
    font-weight normal
    margin 0 30px
    cursor pointer
  .fadeInDown
    display inline-block
    font-size 24px
    font-weight 100
    text-align center
    .title
      font-weight 200
      font-size 32px